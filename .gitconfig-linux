[core]
  editor = /usr/bin/code >/dev/null 2>&1 --wait
  excludesfile = ~/.gitignore
[credential]
  helper = /usr/local/bin/git-credential-manager-core 
  credentialStore = secretservice
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = /usr/bin/code >/dev/null 2>&1 --wait --diff $LOCAL $REMOTE
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = /usr/bin/code >/dev/null 2>&1 --wait $MERGED
